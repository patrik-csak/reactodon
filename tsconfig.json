{
  // https://github.com/vercel/turbo/blob/v1.8.3/examples/basic/packages/tsconfig/base.json
  // https://github.com/vercel/turbo/blob/v1.8.3/examples/basic/packages/tsconfig/react-library.json
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": [
      "ES2015"
    ],
    "module": "Node16",
    "moduleResolution": "Node16",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es6"
  }
}
